<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_xxsmall"
    android:elevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TextView
            android:id="@+id/item_fav_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xsmall"

            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toTopOf="@id/item_fav_high_low"

            app:layout_constraintStart_toEndOf="@+id/item_fav_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Phuthaditjhaba" />

        <ImageView
            android:id="@+id/item_fav_icon"
            android:layout_width="@dimen/text_xlarge"
            android:layout_height="@dimen/text_xlarge"
            android:layout_marginStart="@dimen/margin_xxsmall"
            android:src="@drawable/partlysunny"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_fav_high_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xsmall"

            android:textColor="@color/white"
            android:textSize="@dimen/text_xsmall"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/item_fav_city"
            app:layout_constraintTop_toBottomOf="@+id/item_fav_city"
            tools:text="24 / 15" />


        <TextView
            android:id="@+id/item_fav_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_small"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xlarge"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="22" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
